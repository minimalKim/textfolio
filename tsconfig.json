{
  "compilerOptions": {
    "strict": true,
    "outDir": "build",
    "module": "CommonJS",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["src/"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
