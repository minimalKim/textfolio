{
  "compilerOptions": {
    "strict": true,
    "outDir": "build",
    "module": "CommonJS",
    "target": "es5",
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
  },
  "include": ["src/", "global.d.ts"],
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
